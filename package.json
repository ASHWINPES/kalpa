{
  "name": "kalpa",
  "version": "0.1.7",
  "description": "Scaffolding tool",
  "main": "lib/kalpa/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 0",
    "semantic-release": "semantic-release",
    "lint": "eslint **/*.js",
    "lint:fix": "npm run lint -- --fix"
  },
  "files": [
    "lib",
    "lib/kalpa",
    "example",
    "index.js"
  ],
  "repository": {
    "type": "git",
    "url": "git@github.com:patilvinay/kalpa.git"
  },
  "bin": {
    "kalpa": "./kalpa.js"
  },
  "keywords": [
    "scaffolding",
    "automation",
    "tool"
  ],
  "author": "Vinay Patil",
  "license": "Apache-2.0",
  "dependencies": {
    "commander": "^5.1.0",
    "lodash": "^4.17.15",
    "signale": "^1.4.0",
    "winston": "^3.2.1",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "babel": "^6.23.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.3",
    "babel-node": "0.0.1-security",
    "babel-preset-env": "^1.7.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb": "^18.1.0",
    "eslint-config-airbnb-base": "^13.2.0",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-import": "^2.20.0",
    "eslint-plugin-jest": "^23.6.0",
    "eslint-plugin-node": "^11.0.0",
    "eslint-plugin-prettier": "^3.1.3",
    "eslint-plugin-promise": "^4.2.1",
    "husky": "^4.2.5",
    "kalpa-tester": "0.0.0",
    "lint-staged": "^10.2.2",
    "npm-run-all": "^4.1.5",
    "prettier": "2.0.5",
    "semantic-release": "^17.0.7"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "lint-staged": {
    "{src|test}/**/*.js": [
      "npm run lint:fix",
      "git add"
    ]
  },
  "signale": {
    "displayScope": true,
    "displayBadge": true,
    "displayDate": false,
    "displayFilename": false,
    "displayLabel": false,
    "displayTimestamp": false,
    "underlineLabel": true,
    "underlineMessage": false,
    "underlinePrefix": false,
    "underlineSuffix": false,
    "uppercaseLabel": false
  }
}
